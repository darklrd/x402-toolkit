{
  "name": "x402-adapters",
  "version": "0.1.0",
  "description": "Mock (and future real) payer/verifier adapters for x402-toolkit",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./mock": {
      "import": "./dist/mock/index.js",
      "types": "./dist/mock/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist *.tsbuildinfo",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "rimraf": "^5.0.10",
    "typescript": "^5.5.4"
  }
}
